<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 1. Define un Estilo de Texto (TextAppearance) para sans-serif-smallcaps -->
    <style name="TextAppearance.Healthypath.SmallCaps" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>

    <!-- 2. Modifica el estilo del tema para usar el nuevo estilo -->
    <style name="themeApp.Healthypath" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--Primary brand color-->
        <item name="colorPrimary">@color/md_cyan_700</item>
        <item name="colorPrimaryVariant">@color/md_cyan_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Asigna el nuevo estilo de texto -->
        <item name="android:textAppearance">@style/TextAppearance.Healthypath.SmallCaps</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="shapeCornerFamily">rounded</item>
    </style>
</resources>