<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="2dp"
    android:gravity="center"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="5600dp"
        android:paddingTop="15dp"
        android:paddingRight="75dp"
        android:paddingLeft="75dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/blacklog"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:gravity="center"
            android:layout_width="220dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Ingresa tus Datos"
            android:textColor="@color/DarkBlue"
            android:textSize="30dp"/>

        <EditText
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/nombreusuario"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:hint="Nombre de Usuario"
            android:textColorHint="@color/black"
            android:padding="4dp"
            android:textSize="20dp"
            android:background="@drawable/borde_redondeado"/>

        <EditText
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/correo"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borde_redondeado"
            android:hint="Correo"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textSize="20dp" />


        <EditText
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/password"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Contrasena"
            android:textColorHint="@color/black"
            android:padding="4dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:background="@drawable/borde_redondeado"/>

        <EditText
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/password2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Confirme su contrasena"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:background="@drawable/borde_redondeado"/>


        <ProgressBar
            android:id="@+id/carga"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde_redondeado"
            android:backgroundTint="@color/SoftOrange"
            android:gravity="center"
            android:text="Registrarme"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>



</RelativeLayout>