<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dream.DreamActivity">

    <View
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#053F5C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
                />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/principal"
        android:text="@string/sueo"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:layout_marginStart="15dp"
        android:padding="10sp"/>

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="45sp"
        android:layout_height="46sp"
        android:background="#053F5C"
        android:contentDescription="@string/back"
        android:scaleType="center"
        android:src="@mipmap/backleft"
        app:layout_constraintBottom_toBottomOf="@id/principal"
        app:layout_constraintLeft_toLeftOf="@id/principal"
        app:layout_constraintTop_toTopOf="@id/principal"
        android:layout_marginStart="10sp"
        android:scaleX="1"
        android:scaleY="1"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstboxdream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/principal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/imgdormir"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="#3F3B59"
            android:src="@mipmap/dormir"
            app:layout_constraintTop_toTopOf="@id/firstboxdream"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"/>

        <TextView
            android:id="@+id/description_content_dream"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/dream_introudction"
            app:layout_constraintTop_toBottomOf="@id/imgdormir"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/subtitles"
            android:elevation="15dp"
            android:layout_width="330dp"
            app:layout_constraintTop_toBottomOf="@id/description_content_dream"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_height="wrap_content"
            android:text="Importancia del sueño "
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/pressbtn"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="@color/white"/>

        <TextView
            android:id="@+id/two_description_content_dream"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text=": El sueño es un pilar fundamental para nuestra salud física, mental y emocional, y su importancia se refleja en cada aspecto de nuestra vida diaria. Priorizar un buen descanso es una de las mejores inversiones que podemos hacer para mejorar nuestra calidad de vida. A continuacion se presentaran ciertos puntos por los cuales se considera que es importante dormir bien:"
            app:layout_constraintTop_toBottomOf="@id/subtitles"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/two_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/two_description_content_dream"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Recuperacion muscular"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/punto_uno"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/importancia_puntos_dream"
            app:layout_constraintTop_toBottomOf="@id/two_subtitle"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/third_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/punto_uno"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Consolidacion de energia"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/punto_dos"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Durante el sueño, el cuerpo restaura sus reservas de energía, lo que te permite afrontar el día con vitalidad."
            app:layout_constraintTop_toBottomOf="@id/third_subtitle"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/fourth_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/punto_dos"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Mejora de la Concentración y el Enfoque"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/punto_tres"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/importancia_puntos_dream"
            app:layout_constraintTop_toBottomOf="@id/fourth_subtitle"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/five_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/punto_tres"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Salud Mental"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/punto_cuatro"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="La privación del sueño se ha relacionado con un mayor riesgo de desarrollar trastornos del estado de ánimo, como la depresión y la ansiedad."
            app:layout_constraintTop_toBottomOf="@id/five_subtitle"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/fifth_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/punto_cuatro"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Rendimiento Academico:"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/punto_cinco"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Los estudiantes que duermen bien tienen un mejor rendimiento académico, con mayor capacidad de concentración, aprendizaje y memoria."
            app:layout_constraintTop_toBottomOf="@id/fifth_subtitle"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/subtitles_consc"
            android:elevation="15dp"
            android:layout_width="330dp"
            app:layout_constraintTop_toBottomOf="@id/punto_cinco"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_height="wrap_content"
            android:text="Consecuencias"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/pressbtn"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="@color/white"/>

        <TextView
            android:id="@+id/description_consecuencia"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/consecuencias_de_no_dormir"
            app:layout_constraintTop_toBottomOf="@id/subtitles_consc"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="12sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <!--aca empieza la parte del insomnio-->
        <TextView
            android:id="@+id/insomnio_sub"
            android:elevation="15dp"
            android:layout_width="330dp"
            app:layout_constraintTop_toBottomOf="@id/description_consecuencia"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_height="wrap_content"
            android:text="Insomnio"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/pressbtn"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowRadius="8"
            android:letterSpacing="0.150"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="@color/white"/>

        <ImageView
            android:id="@+id/imginsomnio"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="imginsomnio"
            android:src="@mipmap/insomnio"
            app:layout_constraintTop_toBottomOf="@id/insomnio_sub"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:background="#211C40"/>

        <TextView
            android:id="@+id/description_insomnio"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="El insomnio es un trastorno del sueño que se caracteriza por la dificultad para iniciar o mantener el sueño, o por despertarse demasiado temprano y no poder volver a dormir."
            app:layout_constraintTop_toBottomOf="@id/imginsomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="12sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/subt_causas_insomnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_insomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Causas:"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/description_causas_insomnio"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/causas_insomni"
            app:layout_constraintTop_toBottomOf="@id/subt_causas_insomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/subt_sintomas_insomnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_causas_insomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Sintomas:"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/description_sintomas_insomnio"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/sintomas_insomnio"
            app:layout_constraintTop_toBottomOf="@id/subt_sintomas_insomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/subt_tratamiento_insomnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_sintomas_insomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            android:text="Tratamiento:"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18sp"
            android:shadowRadius="8"
            android:shadowDy="6"
            android:shadowDx="4"
            android:shadowColor="#4B4747"/>


        <TextView
            android:id="@+id/description_tratamiento_insomnio"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/tratamiento_insomnio"
            app:layout_constraintTop_toBottomOf="@id/subt_tratamiento_insomnio"
            app:layout_constraintLeft_toLeftOf="@id/firstboxdream"
            app:layout_constraintRight_toRightOf="@id/firstboxdream"
            app:layout_constraintBottom_toBottomOf="@id/firstboxdream"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:background="@drawable/datesbox"
            android:padding="10sp"
            android:elevation="15dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"
            />









    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>